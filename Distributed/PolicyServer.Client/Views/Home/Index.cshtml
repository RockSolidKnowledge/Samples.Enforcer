@{
    ViewData["Title"] = "Home Page";
}

<div>
    <h1 class="display-4">Welcome</h1>
    
    <table>
        <tr>
            <th>
                Name
            </th>
            <th>
                Value
            </th>
        </tr>
        
        @foreach (var claim in User.Claims)
            {
                <tr>
                    <td>@claim.Type</td>
                    <td>@claim.Value</td>
                </tr> 
            }
    </table>
    
</div>
